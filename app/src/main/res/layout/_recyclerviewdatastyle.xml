<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="@color/Turquoise">

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/txtname"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:gravity="right"
            android:padding="5dp"
            android:text="Name:"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtnameshow"
            android:layout_marginTop="5dp"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:text="1"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtname"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtcontact"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:gravity="right"
            android:text="Contact:"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtname" />

        <TextView
            android:id="@+id/txtcontactshow"
            android:text="1"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtcontact"
            app:layout_constraintTop_toBottomOf="@+id/txtnameshow" />

        <TextView
            android:id="@+id/txtemail"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:gravity="right"
            android:text="Email:"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtcontact" />


        <TextView
            android:id="@+id/txtemailshow"
            android:text="1"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtemail"
            app:layout_constraintTop_toBottomOf="@+id/txtcontactshow" />

        <TextView
            android:id="@+id/txtgender"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:gravity="right"
            android:text="Gender:"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtemail" />


        <TextView
            android:id="@+id/txtgendershow"
            android:text="1"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtgender"
            app:layout_constraintTop_toBottomOf="@+id/txtemailshow" />

        <TextView
            android:id="@+id/txtpassword"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:gravity="right"
            android:text="Password:"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtgender" />


        <TextView
            android:id="@+id/txtpasswordshow"
            android:text="1"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtpassword"
            app:layout_constraintTop_toBottomOf="@+id/txtgendershow" />

        <TextView
            android:id="@+id/txtjob"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:gravity="right"
            android:text="Status:"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtpassword" />


        <TextView
            android:id="@+id/txtjobshow"
            android:text="1"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtjob"
            app:layout_constraintTop_toBottomOf="@+id/txtpasswordshow" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>