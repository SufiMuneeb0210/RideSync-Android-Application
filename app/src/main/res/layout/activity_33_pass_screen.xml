<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="._3_3_PassScreen">


    <ImageView
        android:id="@+id/LoginUpperWave"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/upperwave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/LoginLowerWave"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="-10dp"
        android:src="@drawable/lowerwave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/AdminHeading"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/ubuntu"
        android:gravity="center"
        android:text="Bus Pass"
        android:textColor="@color/Turquoise"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnhistory"
        android:layout_marginTop="70dp"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/Turquoise"
        android:fontFamily="@font/ubuntu"
        android:text="Status"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toEndOf="@+id/AdminHeading"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/Divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/Turquoise"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnhistory" />

    <EditText
        android:id="@+id/edtname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/edittextunderline"
        android:fontFamily="@font/ubuntu"
        android:hint="Name"
        android:editable="false"
        android:clickable="false"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColor="@color/Turquoise"
        android:textColorHint="@color/Turquoise"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Divider" />

    <EditText
        android:fontFamily="@font/ubuntu"
        android:id="@+id/edtemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittextunderline"
        android:hint="Email"
        android:padding="15dp"
        android:textSize="18sp"
        android:editable="false"
        android:clickable="false"
        android:layout_margin="20dp"
        android:inputType="textPersonName"
        android:textColor="@color/Turquoise"
        android:textColorHint="@color/Turquoise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtname" />

    <EditText
        android:fontFamily="@font/ubuntu"
        android:id="@+id/balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittextunderline"
        android:hint="Current Balance"
        android:padding="15dp"
        android:textSize="18sp"
        android:editable="false"
        android:clickable="false"
        android:layout_margin="20dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/Turquoise"
        android:textColorHint="@color/Turquoise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtemail" />

    <EditText
        android:fontFamily="@font/ubuntu"
        android:id="@+id/edtbusid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittextunderline"
        android:hint="Bus Number"
        android:padding="15dp"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:inputType="textPersonName"
        android:textColor="@color/Turquoise"
        android:textColorHint="@color/Turquoise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balance" />


    <Spinner
        android:id="@+id/edtmonth"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/listbackground"
        android:entries="@array/Gender"
        android:fontFamily="@font/ubuntu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balance" />

    <TextView
        android:id="@+id/txtpaymentmultiple"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ubuntu"
        android:gravity="center"
        android:text="12000/mon"
        android:textColor="@color/Turquoise"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toEndOf="@+id/edtmonth"
        app:layout_constraintTop_toBottomOf="@+id/edtbusid" />

    <EditText
        android:fontFamily="@font/ubuntu"
        android:id="@+id/edtpayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittextunderline"
        android:hint="Total Payment will be"
        android:padding="15dp"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:inputType="none"
        android:clickable="false"
        android:textColor="@color/Turquoise"
        android:textColorHint="@color/Turquoise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtmonth" />

    <Button
        android:id="@+id/btnregister"
        android:fontFamily="@font/ubuntu"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/Turquoise"
        android:text="Apply"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        app:cornerRadius="50dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtpayment" />



</androidx.constraintlayout.widget.ConstraintLayout>